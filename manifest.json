{
  "manifest_version": 2,
  "name": "Histofy",
  "version": "1.0.0",
  "description": "Categorize and analyze browsing history for productivity insights.",
  "permissions": [
    "history",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"]
    }
  ],
  "icons": {
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    "assets/sql-wasm.wasm"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self'; connect-src *;"
}
